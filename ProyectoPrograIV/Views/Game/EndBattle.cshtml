@{
    ViewData["Title"] = "Resultado del Combate";
    Layout = "~/Views/Shared/_SignedInLayout.cshtml";
    bool gano = ViewBag.PlayerWon == true;
}

<<<<<<< HEAD
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Press Start 2P', cursive;
            background-image: url('/imagenes/Fondo.jpeg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: white;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            padding: 2rem;
            box-sizing: border-box;
            backdrop-filter: blur(4px);
            flex-direction: column;
        }

        .alert {
            width: 80%;
            max-width: 600px;
            margin: 1rem auto;
        }

        .btn {
            margin-top: 2rem;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1 class="display-4 mb-4 text-primary">Resultado del Combate</h1>

        @if (gano)
        {
            <div class="alert alert-success p-4 rounded shadow-sm">
                <h2 class="text-success">
                    <i class="bi bi-trophy-fill"></i> ¡Has ganado el combate!
                </h2>
            </div>
        }
        else
        {
            <div class="alert alert-danger p-4 rounded shadow-sm">
                <h2 class="text-danger">
                    <i class="bi bi-emoji-frown-fill"></i> Has perdido el combate.
                </h2>
            </div>
        }

        <a href="@Url.Action("Play", "Game")" class="btn btn-outline-primary btn-lg mt-4">
            <i class="bi bi-arrow-repeat"></i> Volver a jugar
        </a>
    </div>
</body>
</html>
