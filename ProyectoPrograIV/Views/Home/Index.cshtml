@{
	ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<title>Pantalla Inicial</title>
	<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
	<style>
		body, html {
			margin: 0;
			padding: 0;
			height: 100%;
			font-family: 'Press Start 2P', cursive;
			background-image: url('/imagenes/Fondo.jpeg');
			background-size: cover;
			background-position: center;
			background-repeat: no-repeat;
			color: white;
		}

		.container {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100%;
			padding: 2rem;
			box-sizing: border-box;
			backdrop-filter: blur(4px);
		}

		.carousel-container {
			position: relative;
			width: 90%;
			max-width: 800px;
			overflow: hidden;
			background-color: rgba(0, 0, 0, 0.7);
			border: 4px solid #00ff00;
			box-shadow: 0 0 15px #00ff00;
			padding: 20px;
			border-radius: 10px;
		}

		.carousel-track {
			display: flex;
			transition: transform 0.5s ease-in-out;
			width: 100%;
		}

		.carousel-slide {
			min-width: 100%;
			text-align: center;
		}

			.carousel-slide img {
				width: 250px;
				height: auto;
				margin: 0 auto;
				image-rendering: pixelated;
			}

		.info {
			margin-top: 1rem;
		}

		.name {
			font-size: 1.2rem;
			margin-bottom: 0.5rem;
		}

		.type {
			display: inline-block;
			padding: 0.3rem 0.6rem;
			margin: 0.2rem;
			border-radius: 4px;
			font-size: 0.8rem;
		}

		.ability {
			margin-top: 0.5rem;
			font-size: 0.9rem;
		}

		.buttons {
			position: absolute;
			top: 50%;
			width: 100%;
			display: flex;
			justify-content: space-between;
			transform: translateY(-50%);
		}

			.buttons button {
				background-color: #000;
				color: #00ff00;
				border: 2px solid #00ff00;
				padding: 10px 20px;
				cursor: pointer;
				font-family: 'Press Start 2P', cursive;
				transition: background 0.3s ease;
			}

				.buttons button:hover {
					background-color: #00ff00;
					color: #000;
				}
	</style>
</head>
<body>
	<div class="container">
		<div class="carousel-container">
			<div class="carousel">
				<div class="carousel-track">
					<div class="carousel-slide">
						<img src="/imagenes/Monstruos/Amaru/Amaru_1.png" alt="Amaru">
						<div class="info">
							<div class="name">Amaru</div>
							<div class="type" style="background-color:#6F35FC;">Dragón</div>
							<div class="ability">Número de Registro: 1</div>
						</div>
					</div>
					<div class="carousel-slide">
						<img src="/imagenes/Monstruos/Capibara/capibara_1.png" alt="Capibara">
						<div class="info">
							<div class="name">Capibara</div>
							<div class="type" style="background-color:#6390F0;">Agua</div>
							<div class="ability">Número de Registro: 2</div>
						</div>
					</div>
					<div class="carousel-slide">
						<img src="/imagenes/Monstruos/Comburucho/comburucho_1.png" alt="Comburucho">
						<div class="info">
							<div class="name">Comburucho</div>
							<div class="type" style="background-color:#EE8130;">Fuego</div>
							<div class="type" style="background-color:#735797;">Fantasma</div>
							<div class="ability">Número de Registro: 3</div>
						</div>
					</div>
					<div class="carousel-slide">
						<img src="/imagenes/Monstruos/DonGallon/DonGallon_1.png" alt="DonGallon">
						<div class="info">
							<div class="name">DonGallon</div>
							<div class="type" style="background-color:#C22E28;">Lucha</div>
							<div class="type" style="background-color:#A98FF3;">Volador</div>
							<div class="ability">Número de Registro: 4</div>
						</div>
					</div>
					<div class="carousel-slide">
						<img src="/imagenes/Monstruos/Venus/venus_1.png" alt="Venus">
						<div class="info">
							<div class="name">Venus</div>
							<div class="type" style="background-color:#F95587;">Psíquico</div>
							<div class="type" style="background-color:#B6A136;">Roca</div>
							<div class="ability">Número de Registro: 5</div>
						</div>
					</div>
					<div class="carousel-slide">
						<img src="/imagenes/Monstruos/Volpaca/Volpaca_1.png" alt="Volpaca">
						<div class="info">
							<div class="name">Volpaca</div>
							<div class="type" style="background-color:#E2BF65;">Tierra</div>
							<div class="type" style="background-color:#96D9D6;">Hielo</div>
							<div class="ability">Número de Registro: 6</div>
						</div>
					</div>
				</div>
				<div class="buttons">
					<button id="prev">&#10094;</button>
					<button id="next">&#10095;</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		const track = document.querySelector('.carousel-track');
		const slides = Array.from(track.children);
		const prevButton = document.getElementById('prev');
		const nextButton = document.getElementById('next');
		let currentSlide = 0;

		function updateSlides() {
			track.style.transform = `translateX(-${100 * currentSlide}%)`;
		}

		prevButton.addEventListener('click', () => {
			currentSlide = (currentSlide - 1 + slides.length) % slides.length;
			updateSlides();
		});

		nextButton.addEventListener('click', () => {
			currentSlide = (currentSlide + 1) % slides.length;
			updateSlides();
		});
	</script>
</body>
</html>
