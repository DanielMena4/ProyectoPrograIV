@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager;
<ul class ="navbar-nav ms-auto">
	@if (signInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Cerrar Sesion</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Iniciar Sesion</a>
		</li>

		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Registrarse</a>
		</li>
	}

</ul></>